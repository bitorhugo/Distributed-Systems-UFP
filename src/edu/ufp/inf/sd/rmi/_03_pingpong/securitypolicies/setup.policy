grant codeBase "${edu.ufp.sd.pingpong.activation.setup.codebase}" {
    // permissions to read system properties required by setup program
    permission java.util.PropertyPermission "edu.ufp.sd.pingpong.activation.impl.codebase","read";
    permission java.util.PropertyPermission "edu.ufp.sd.pingpong.activation.policy","read";
    permission java.util.PropertyPermission "edu.ufp.sd.pingpong.activation.file","read";
    permission java.util.PropertyPermission "edu.ufp.sd.pingpong.activation.servicename","read";
    // permission to connect to the activation system and the registry
    permission java.net.SocketPermission "*:1098-1099","connect";
};
